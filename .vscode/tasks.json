{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "bun --bun dev",
      "group": { "kind": "build", "isDefault": true }
    },

    {
      "label": "Build",
      "type": "shell",
      "command": "bun --bun run build",
      "group": { "kind": "build" }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "bun eslint . --fix",
      "problemMatcher": "$eslint-stylish",
      "group": { "kind": "test", "isDefault": true }
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "bun tsc --noEmit",
      "problemMatcher": "$tsc",
      "group": { "kind": "test" }
    }
  ]
}
